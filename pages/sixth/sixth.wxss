
.imageContent{
   padding-bottom: 10px;
   background-color: lightgray;
}

.imageContent .imageView{
	display:flex;
	flex-direction:row;
	flex-wrap: wrap;
	justify-content: center;
}

.imageContent .imageView .imageViewList{
    flex:0;
	  margin-bottom: -5px;
}

.imageContent .imageView .imageViewList .dialogView{
	margin-left:100rpx;
	padding-bottom:0px;
	margin-top:30rpx;
	width:125rpx;
	height:auto;
	font-size: 8pt;
	position:absolute;

	background-color: white;
	color: black;
	border:0.5px solid #ccc;
	text-align: center;
	border-radius: 2px;
	font-family: sans-serif;
	z-index: 1000
}

.speech-bubble {
  position: relative;
  color: white;
  text-align: center;
  border-radius: 0px;
  font-family: sans-serif;
}

.speech-bubble:after {
  content: '';
  position: absolute;
  width: 0;
  height: 0;
  border: 10px solid;
  border-color:transparent ;
}

.speech-bubble-left:after {
  border-style:solid;
  border-right-color: white;
  top: 50%;
  right: 100%;
  margin-top: -10px;
}
.imageView .imageViewList .imageCss{
    border:1px solid white;
    width: 140rpx;
    height: 140rpx;
    /*border-radius: 50%;*/
}

.imageView2{
	position: absolute;
	margin-top:60px;
	z-index: 2000;
}

.imageView2 .imageCss2{
    border:2px solid white;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
}

.titleContent{
    background-color: lightgray;
    width:100%;
    padding-left: 25rpx;
}

.titleContent .titleView{
    display:flex;
    flex-direction:row;
    flex-wrap: wrap;
    justify-content:flex-start;
}

.titleContent .titleView .titleImage{
    border:1px solid white;
    margin-right: 40rpx;
    width: 100rpx;
    height: 100rpx;
}






.play-bar{
    display:flex;
    flex-direction:row;
    flex-wrap: wrap;
    width:95%;
    background-color: lightcyan;
    
}
.play-bar-image-container{
    width:75rpx;
    height:75rpx;
}

.play-bar-image{
    width:75rpx;
    height:75rpx;
    border-radius: 10rpx;
}
.big-photo-list{
    width:100%;
    display:flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
}

.big-photo-item{
    display: flex;
    flex-direction: column;
    padding:5rpx 0rpx;
}

.photo{
    width:150rpx;
    height:150rpx;
    border-radius: 10rpx;
    background: #aaaaaa;
}

.music-name{
    font-size: 12px;
    line-height: 16px;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.music-author{
    font-size: 12px;
    color:#929292;
    line-height: 16px;
}
