<view class="container">
	<view class="imageContent">
	    <view class="imageView">
	        <view class="imageViewList" wx:for="{{imageObjectList}}" wx:for-item="items" wx:for-index="idx" >
                <view wx:if="{{idx==show}}" class="dialogView speech-bubble speech-bubble-left">
                    我是 我是 我是 我是 我是 我是
                </view>
                <image class="imageCss" src="{{items.url}}"/>
            </view>
	    </view>
	</view>
	<view class="imageView2">
		<view>
			<image class="imageCss2" src="{{personalObject.url}}"/>
		</view>
	</view>
  <hr/>

  
	<view class="titleContent">
	    <view class="titleView">
	        <view class="imageViewList" wx:for="{{titleList}}" wx:for-item="item" wx:for-index="idx" >
              <image wx:if="{{idx!=4}}"  class="titleImage" src="{{item.coverImgUrl}}"/>
              <view class="titleViewUser" wx:if="{{idx==4}}">
                  <image  class="titleImageUser" src="{{item.coverImgUrl}}"/>
            </view>
          </view>  
	    </view>
	</view>
	
  <view class="filmContent">
		<view class="titleView">
			<text class="tileText">{{filmObject.name}}</text>
		</view>
	</view>

  <view style='border-bottom: 10rpx solid lightgray;width:100%;'>
    <view style="display:flex;flex-direction:column;width:94%;height:100%; padding-left:10px;margin-right:10px;">
      <scroll-view scroll-x="true" style="white-space:nowrap; display: block;">
          <view class="big-photo-item"  wx:for="{{songsList}}" bindtap="play" data-num="{{index}}" style='width: 100px; display: inline-block'>
            <image style='width:100%;height:150rpx;' src="{{item.coverImgUrl}}"></image>
          </view>
      </scroll-view>
    </view>
  </view>

  <view class="filmContent">
		<view class="titleView">
			<text class="tileText">{{gameObject.name}}</text>
		</view>
	</view> 
  <view class="music-list-container">
        <view class="big-photo-list">
            <view  class="big-photo-item"  wx:for="{{gameList}}" bindtap="play" data-num="{{index}}">
                <image class="photo" src="{{item.coverImgUrl}}"></image>
                <text class="music-name">{{item.name}}</text>
                <text class="music-author">{{item.singer}}</text>
            </view>
        </view>
    </view>


</view>